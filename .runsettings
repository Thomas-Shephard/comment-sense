<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Exclude>[System.*]*,[Microsoft.*]*,[*.Tests]*</Exclude> <!-- Exclude System, Microsoft, and Test assemblies -->
          <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute,LoggerMessageAttribute</ExcludeByAttribute> <!-- Exclude attributes -->
          <ExcludeByFile>**/System.*.cs,**/*.g.cs</ExcludeByFile> <!-- Exclude System and autogenerated source files -->
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
